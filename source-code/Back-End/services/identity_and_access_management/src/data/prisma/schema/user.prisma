// tenant.prisma
model User {
    id               Int @id @default(autoincrement()) // Unique ID for each user
    tenantDivisionId Int // Foreign key to the Tenant model

    // User attributes
    email     String @unique // email address of the user
    firstName String // Name of the user
    lastName  String // Name of the user
    password  String // password of the user

    // optional attributes
    phone           String? // phone number of the user
    address         String? // address of the user
    gender          String? // sex of the user
    birthday        DateTime? // birthday of the user
    profileImageUrl String? // avatar of the user

    // refresh token
    refreshToken String?

    // User roles
    permissions Json? // Store as JSON array 
    userRole String
    role    userRole[]  
    // Timestamps
    createdAt   DateTime   @default(now()) // Timestamp for when the division was created
    updatedAt   DateTime   @updatedAt // Automatically updated when the division is updated
}
